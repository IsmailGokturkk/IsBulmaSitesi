@model List<ResultCompanyDetailDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Acenta Listesi</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <a href="/CompanyDetail/Create" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus"></i> Yeni Şirket
                        </a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Açıklama</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var agn in Model)
                        {
                            <tr>
                                <td>@agn.Id</td>
                                <td>@agn.Title</td>
                                <td>@agn.Mail</td>
                                <td>@agn.PhoneNumber</td>
                                <td>@agn.CompanyDescription</td>
                                <td><a href="/CompanyDetail/Edit?id=@agn.Id" class="btn btn-outline-warning">Güncelle</a></td>
                                <td><a asp-controller="CompanyDetail" asp-action="Delete" asp-route-id="@agn.Id" class="btn btn-outline-danger">Sil</a></td>
                            </tr>
                        }


                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>